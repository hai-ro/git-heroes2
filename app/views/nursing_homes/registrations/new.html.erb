<h2>事業所嗚呼登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "nursing_homes/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "事業所名" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "事業所住所" %>
  </div>

  <div class="field">
    <%= f.label :detail %><br />
    <%= f.text_area :detail, autofocus: true, autocomplete: "ヘルパーに、あなたたちについて知ってもらいましょう！" %>
  </div>

  <div class="field">
    <%= f.label :website %><br />
    <%= f.text_field :website, autofocus: true, autocomplete: "URL" %>
  </div>

  <div class="field">
    <%= f.label :contact_person %><br />
    <%= f.text_field :contact_person, autofocus: true, autocomplete: "担当者名" %>
  </div>
  
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "電話番号" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード" %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>

<%= render "nursing_homes/shared/links" %>
