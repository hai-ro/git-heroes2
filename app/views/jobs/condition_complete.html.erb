<%= render "layouts/header" %>

<main class="style-main style-ma-tlow mb-5">
  <section class="container-fluid">
    <div class="row">
      <div class="col-lg-3">
      </div>
      <div class="col-lg-6">
        <div class="mb-5">
          <h1 class="style-centertext mb-3">正式に受注しました！</h1>
          <p class="style-centertext">お仕事、頑張ってくださいね！</p>
        </div>
        <div>
          <div class="row">
            <div class="col-lg-6">
              <div class="style-centertext mb-3">
                <%= link_to hero_path(current_hero.id) do  %>
                  <button class="style-boder-smallradius style-orderreq-entrybtn">マイページへ</button>
                <% end %>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="style-centertext mb-3">
                <%= link_to jobs_path do %>
                  <button class="style-boder-smallradius style-orderreq-cancelbtn">他のお仕事を探す</button>
                <% end %>
              </div>
            </div>
          </div>
          <div class="mt-5">
            <figure class="style-centertext">
              <img src="/assets/character/Rabbit-Phone-Coment.jpg" alt="エントリーキャンセル画像" width="80%" height="80%">
            </figure>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3">
    </div>
  </section>
</main>