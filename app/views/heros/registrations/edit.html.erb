<h2>登録情報変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "heros/shared/error_messages", resource: resource %>

  <p>------------------------------------------------------------------------------------------------------------------------</p>
  <h3>変更する情報を入力してください。</h3>
  
   <div class="field">
    <%= f.label "名前" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: true, placeholder: "姓" %> <%= f.text_field :first_name, autofocus: true, autocomplete: true, placeholder: "名" %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: true, placeholder: "セイ" %> <%= f.text_field :first_name_kana, autofocus: true, autocomplete: true, placeholder: "メイ" %>
  </div>

  <div class="field">
    <%= f.label :adderss %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: true, placeholder: "住所" %>
  </div>

  <div class="field">
    <%= f.label :gender %><br />
    <%= f.select :gender, [ ["男性", 1], ["女性", 2], ["その他", 3] ] %>
  </div>
  
  <div class="field">
    <%= f.label :birthday %><br />
    <%= raw sprintf(
        f.date_select(:birthday, use_month_numbers: true, start_year: (Time.now.year - 18), end_year: (Time.now.year - 80),
        date_separator: '%s'), '年 ', '月 ') + '日' %>
  </div>
  
  <div class="field" >
    <%= f.label :special_skill %><br />
    <%= f.text_field :special_skill, autofocus: true, autocomplete: true, placehplder: "特技など" %>
  </div>
  
  <div class="field">
    <%= f.label :like %><br />
    <%= f.text_field :like, autofocus: true, autocomplete: true, placeholder: "趣味など" %>
  </div>
  
  <div class="field">
    <%= f.label :profile %><span>(500文字以内)</span><br />
    <%= f.text_area :profile, autofocus: true, autocomplete: true, placeholder: "自己アピールを入力しましょう！",
        cols: "80", rows: "10", maxlength: "500" %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: true, placeholder: "メールアドレス" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>※現在、承認待ちのメールアドレスです: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label "新しいパスワード" %> <i>(※パスワードを変更しない場合は空欄のままにしてください。)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label "新しいパスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <p>------------------------------------------------------------------------------------------------------------------------</p>
  <br />
  <div class="field">
    <%= f.label :current_password %> <i>(変更内容を更新するには現在のパスワードの入力が必要です)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<br />
<%= link_to "マイページに戻る", hero_path(resource) %>
<br />
<br />

<h3>アカウントを削除する</h3>

<p><%= button_to "このアカウントを削除する", registration_path(resource_name), data: { confirm: "すべての会員情報が削除されます。よろしいですか？" }, method: :delete %></p>


