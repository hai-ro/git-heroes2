<h2>ヒーロー会員登録/heroes/app/views/heros/registrations/new.html.erb</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "heros/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "名前" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: true, placeholder: "姓" %> <%= f.text_field :first_name, autofocus: true, autocomplete: true, placeholder: "名" %>
  </div>

  <div class="field">
    <%= f.label "フリガナ" %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: true, placeholder: "セイ" %> <%= f.text_field :first_name_kana, autofocus: true, autocomplete: true, placeholder: "メイ" %>
  </div>

  <div class="field">
    <%= f.label "性別" %><br />
    <%= f.select :gender, [ ["男性", 1], ["女性", 2], ["その他", 3] ] %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: true, placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label "パスワード（確認用）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認用）" %>
  </div>
  
  <!--本人確認の初期設定-->
  <%= f.hidden_field :confirmation, value: 0 %>
  
  <!--各種資格の情報の初期設定-->
  <!--介護初任者研修-->
  <%= f.hidden_field :initial_training, value: 0 %>
  <!--実務者研修-->
  <%= f.hidden_field :practical_training, value: 0 %>
  <!--社会福祉士-->
  <%= f.hidden_field :social_worker, value: 0 %>
  <!--ケアマネジャー-->
  <%= f.hidden_field :care_manager, value: 0 %>
  <!--精神保健福祉士-->
  <%= f.hidden_field :mhwp, value: 0 %>
  <!--福祉用具専門相談員-->
  <%= f.hidden_field :csdw, value: 0 %>
  <!--介護事務-->
  <%= f.hidden_field :interventional_services, value: 0 %>
  <!--福祉環境コーディネーター-->
  <%= f.hidden_field :whec, value: 0 %>
  <!--認知症ケア-->
  <%= f.hidden_field :dementia_care, value: 0 %>
  <!--介護福祉士-->
  <%= f.hidden_field :care_worker, value: 0 %>
  <br />
  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "heros/shared/links" %>
